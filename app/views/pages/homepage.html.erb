<style>
/* Header/Title */
.header {
  padding: 60px;
  text-align: center;
  background: #1abc9c;
  color: black;
  /*Opacity start*/
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=50)";
    filter: alpha(opacity=70);
    -moz-opacity: 0.70;
    -khtml-opacity: 0.7;
    opacity: 0.7;
    /*Opacity end*/
}
/* Style the top navigation bar */
.navbar {
  display: flex;
}
.navbarhome {
&.is-transparent {
background-color: transparent;
background-image: none;
}
}
/* Style the navigation bar links */
.navbar a {
  color: white;
  padding: 14px 20px;
  text-decoration: none;
  text-align: center;
}
/* Change color on hover */
.navbar a:hover {
  background-color: #ddd;
  color: black;
  /*Opacity start*/
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=50)";
    filter: alpha(opacity=100);
    opacity: 0.7;
    /*Opacity end*/
}
</style>
<section class="hero is-primary is-medium has-bg-img">
  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        MaghiWorks
      </h1>
      <h2 class="subtitle">
        This is <strong>EPIC</strong>
      </h2>
    </div>
  </div>

  <!-- Hero footer: will stick at the bottom -->
  <div class="navbarhome">
    <div class="hero-foot">
      <div class="navbar">
        <%= link_to 'About', about_path %>
        <%= link_to 'Articles Blog', articles_path %>
      </div>
    </div>
  </div>
</section>
